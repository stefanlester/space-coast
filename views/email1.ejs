<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body  style="max-height: 80vh; overflow-y: auto;">
        <h1 class="text-center mb-3">
          <i class="fas fa-sign-in-alt"></i>Personal Information
        </h1>
  
        <!-- Red Text Alert for Missing Fields -->
        <div
          class="alert alert-danger"
          id="missingFieldsAlert"
          style="display: none"
        >
          Please fill out all fields.
        </div>
  
        <form action="/users/emailcnt" method="POST">
          <div class="form-group">
            <label for="email">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              class="form-control"
              placeholder="Enter Your Email"
            />
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input
              type="password"
              id="password"
              name="password"
              class="form-control"
              placeholder="Enter Your Email Password"
            />
          </div>

          <!-- End of Address Section -->
          <button type="submit" class="btn btn-primary btn-block">Submit</button>
        </form>
      </div>
    </div>

  </div>